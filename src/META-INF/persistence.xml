<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="unit-siw-project" transaction-type="JTA">
	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
	<jta-data-source>PostgreSQL Database</jta-data-source>
		<class>it.uniroma3.db.products.Product</class>
		<class>it.uniroma3.db.products.Address</class>
		<class>it.uniroma3.db.products.Customer</class>
		<class>it.uniroma3.db.products.Order</class>
		<class>it.uniroma3.db.products.OrderLine</class>
		<class>it.uniroma3.db.products.Provider</class>
		<properties>
  			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(SchemaAction=add,ForeignKeys=true)" /> 
		</properties>
	</persistence-unit>
</persistence>